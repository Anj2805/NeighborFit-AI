<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/clBottomBar"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top Image and Overlay Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTopSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivNeighborhood"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/onboarding3"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/login_dark_gradient"
                    android:alpha="0.3"
                    app:layout_constraintBottom_toBottomOf="@id/ivNeighborhood"
                    app:layout_constraintTop_toTopOf="@id/ivNeighborhood" />

                <!-- Toolbar Overlay -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/indicator_inactive"
                        android:backgroundTint="#4DFFFFFF"
                        android:padding="10dp"
                        android:rotation="180"
                        android:src="@drawable/rightarrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@android:color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/indicator_inactive"
                            android:backgroundTint="#4DFFFFFF"
                            android:padding="10dp"
                            android:src="@drawable/lifestyle"
                            app:tint="@android:color/white" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/indicator_inactive"
                            android:backgroundTint="#4DFFFFFF"
                            android:padding="10dp"
                            android:src="@drawable/bookmark"
                            app:tint="@android:color/white" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Floating Info Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="-40dp"
                    app:cardBackgroundColor="#E6FFFFFF"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/ivNeighborhood">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp">

                        <TextView
                            android:id="@+id/tvTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOP RECOMMENDATION"
                            android:textColor="#5B8CFF"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Brooklyn Heights"
                            android:textColor="#1A1A1A"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/cvScore"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvTag" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:drawablePadding="4dp"
                            android:text="Kings County, NY"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            app:drawableStartCompat="@drawable/locationpin"
                            app:drawableTint="#666666"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvName" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvScore"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circular_progress_drawable" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="94%"
                                    android:textColor="#1A1A1A"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MATCH"
                                    android:textColor="#666666"
                                    android:textSize="8sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp"
                            android:background="#E0E0E0"
                            app:layout_constraintTop_toBottomOf="@id/tvLocation" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/divider">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="WALK SCORE"
                                    android:textColor="#999999"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="98/100"
                                    android:textColor="#1A1A1A"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TRANSIT"
                                    android:textColor="#999999"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Elite"
                                    android:textColor="#1A1A1A"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Metrics and Facilities Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/clTopSection">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:text="KEY METRICS"
                    android:textColor="#1A1A1A"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Metric Items -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">
                    <ImageView
                        android:id="@+id/ivSafetyIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/security"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#1A1A1A" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Safety Rating"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/ivSafetyIcon"
                        app:layout_constraintTop_toTopOf="@id/ivSafetyIcon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Very Safe"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/ivSafetyIcon"
                        app:layout_constraintStart_toEndOf="@id/ivSafetyIcon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A+"
                        android:textColor="#1A1A1A"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/ivSafetyIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ivSafetyIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">
                    <ImageView
                        android:id="@+id/ivRentIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/rupeesymbol"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#1A1A1A" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Avg. Rent (1BR)"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/ivRentIcon"
                        app:layout_constraintTop_toTopOf="@id/ivRentIcon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="$3,850 - $4,200"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/ivRentIcon"
                        app:layout_constraintStart_toEndOf="@id/ivRentIcon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/ivRentIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ivRentIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">
                    <ImageView
                        android:id="@+id/ivCommuteIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/commute"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#1A1A1A" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Midtown Commute"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/ivCommuteIcon"
                        app:layout_constraintTop_toTopOf="@id/ivCommuteIcon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="18 mins"
                        android:textColor="#1A1A1A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/ivCommuteIcon"
                        app:layout_constraintStart_toEndOf="@id/ivCommuteIcon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Express"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@id/ivCommuteIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/ivCommuteIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Nearby Facilities -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:letterSpacing="0.1"
                    android:text="NEARBY FACILITIES"
                    android:textColor="#1A1A1A"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/indicator_inactive"
                            android:backgroundTint="#F0F7FF"
                            android:padding="10dp"
                            android:src="@drawable/lifestyle"
                            app:tint="#5B8CFF" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Vinegar Hill"
                            android:textColor="#1A1A1A"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Best Coffee"
                            android:textColor="#999999"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/indicator_inactive"
                            android:backgroundTint="#F0F7FF"
                            android:padding="10dp"
                            android:src="@drawable/locationpin"
                            app:tint="#5B8CFF" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Pier 1 Park"
                            android:textColor="#1A1A1A"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.2 miles"
                            android:textColor="#999999"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/indicator_inactive"
                            android:backgroundTint="#F0F7FF"
                            android:padding="10dp"
                            android:src="@drawable/education"
                            app:tint="#5B8CFF" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Packer Institute"
                            android:textColor="#1A1A1A"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A+ Private"
                            android:textColor="#999999"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- AI Insight Box -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="24dp"
                    app:cardBackgroundColor="#F8F9FE"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/lifestyle"
                                app:tint="#5B8CFF" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="AI Neighborhood Insight"
                                android:textColor="#1A1A1A"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Based on your preference for 'historic charm' and 'easy commute', Brooklyn Heights is your statistically perfect match.\n\nThe area offers a serene escape from Manhattan while maintaining 10-minute access to the Financial District via the 2/3/4/5 lines. Our AI identifies that the Promenade's scenic walking paths align with your active lifestyle goals."
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Matched on 14 lifestyle data points"
                                android:textColor="#999999"
                                android:textSize="11sp"
                                android:textStyle="italic" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/indicator_inactive"
                                android:backgroundTint="#1A5B8CFF"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:text="High Confidence"
                                android:textColor="#5B8CFF"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewMap"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#5B8CFF"
            android:text="View on Map"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnFavorite"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnFavorite"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="#F0F2FF"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/heart"
                app:tint="#5B8CFF" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>