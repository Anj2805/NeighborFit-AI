<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer dim ring -->
    <item>
        <shape android:shape="oval">
            <size android:width="160dp" android:height="160dp" />
            <solid android:color="#33222632" />
        </shape>
    </item>

    <!-- Inner bright arc-like ring (simulated with stroke) -->
    <item
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="oval">
            <stroke
                android:width="8dp"
                android:color="#6A82FB" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>

